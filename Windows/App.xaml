<Application x:Class="TaskManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TaskManager.Windows"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="WinStyle" TargetType="{x:Type Page}">
            <!--<Setter Property="FontFamily" Value="Courier New"/>-->
            <Setter Property="Background" Value="WhiteSmoke"/>
        </Style>

        <Style x:Key="FormStyle" TargetType="{x:Type Page}">
            <Setter Property="Background" Value="WhiteSmoke" />
            <Style.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Margin" Value="0,2,0,10" />
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="14" />
                </Style>
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>
