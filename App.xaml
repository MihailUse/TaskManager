<Application x:Class="TaskManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TaskManager">
    <Application.Resources>
        <!-- connect some resource dictionary -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Style/Colors.xaml"/>
                
                <!-- base components -->
                <ResourceDictionary Source="./Style/BaseComponents.xaml"/>
                <ResourceDictionary Source="./Style/ContextMenu.xaml"/>
                <ResourceDictionary Source="./Style/ScrollViewer.xaml"/>
                <ResourceDictionary Source="./Style/ComboBox.xaml"/>

                <ResourceDictionary Source="./Style/FormStyle.xaml"/>
                <ResourceDictionary Source="./Style/RoundButton.xaml"/>
                <ResourceDictionary Source="./Style/MenuButton.xaml"/>
                <ResourceDictionary Source="./Style/FilterButton.xaml"/>
                <ResourceDictionary Source="./Style/WindowButtons.xaml"/>
                <ResourceDictionary Source="./Style/ErrorTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
