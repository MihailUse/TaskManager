<Page x:Class="TaskManager.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.Pages"
      mc:Ignorable="d" 
      
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="ProfilePage"
      Style="{StaticResource WinStyle}">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Page.Resources>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="250">
        <Image x:Name="Avatar" Source="{Binding Path=avatar}" MaxWidth="250" MaxHeight="250"/>

        <TextBlock Text="Login" Margin="0 15 0 0"/>
        <TextBlock Margin="0" Text="{Binding Path=login}"/>

        <TextBlock Text="About" Margin="0 15 0 0"/>
        <TextBlock Margin="0" Text="{Binding Path=about}"/>

        <TextBlock Text="Created at" Margin="0 15 0 0"/>
        <TextBlock Margin="0" Text="{Binding Path=createdAt}"/>

        <TextBlock Text="Upadated at" Margin="0 15 0 0"/>
        <TextBlock Margin="0" Text="{Binding Path=upadatedAt}"/>

        <Button Content="Edit" Click="EditButton_Click"/>
    </StackPanel>
</Page>
