<Page x:Class="TaskManager.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.Pages"
      mc:Ignorable="d" 
      
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="ProfilePage"
      Style="{StaticResource WinStyle}">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,15,0,10" />
        </Style>
    </Page.Resources>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="250">
        <Image x:Name="UserAvatar" MaxWidth="250" MaxHeight="250"/>

        <Button Content="Upload image"/>

        <TextBlock x:Name="Login" Text="Login"/>
        <TextBlock x:Name="About" Text="About"/>

        <Button Content="Edit" Click="AuthButton_Click"/>
    </StackPanel>
</Page>
