<Page x:Class="TaskManager.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManager.Pages"
      mc:Ignorable="d" 
      
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="MainPage"
      Style="{StaticResource WinStyle}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Grid.Row="0"/>
        <UniformGrid Columns="3" Grid.Row="0">
            <TextBlock x:Name="UserName" Grid.Column="0"/>
        </UniformGrid>

        <Frame x:Name="WorkSpaceFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>

    </Grid>
</Page>
